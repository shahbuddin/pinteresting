<div class="panel panel-default">

	  <div class="panel-heading">
	    <h2>Weight</h2>
	  </div>

	<div class="panel-body">

		<table class="table">
		            <thead>
		              <tr>
		                <th>Date</th>
		                <th>Weight</th>
		              </tr>
		            </thead>

		          <tbody>
		              <tr>
		                      <td><%= @weight.created_at.to_date %></td>
		                      <td><%= @weight.weight %></td>
		                   
		              </tr>
		          </tbody>
		</table>
	</div>

    	<div class="panel-footer center">
	<% if @weight.user == current_user %>
		<%= link_to 'Edit', edit_weight_path(@weight),  class: "btn btn-primary" %> |
	<% end %>

	<%= link_to 'Back', weights_path, class: "btn btn-primary" %>
    	</div>

</div>

<% @weight.weight_loss_percentage = 100 * (@weight.weight - current_user.weights.first.weight)/(current_user.weights.first.weight) %>
<% @weight.save %>