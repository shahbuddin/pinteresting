<h1>Listing weights</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>User</th>
      <th>Weight</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @weights.each do |weight| %>
      <tr>
        <td><%= weight.created_at.to_date %></td>
        <td><%= weight.user.email if weight.user %></td>
        <td><%= weight.weight %></td>
        <td><%= link_to 'Show', weight %></td>

        <% if weight.user == current_user %>

          <td><%= link_to 'Edit', edit_weight_path(weight) %></td>
          <td><%= link_to 'Destroy', weight, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <% end %>
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<% if user_signed_in? %>
    <%= link_to 'New Weight', new_weight_path %>
<% end %>
